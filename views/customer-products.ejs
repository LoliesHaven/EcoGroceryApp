<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>EcoGrocery</title>
    <style>
        .product-image {
            width:100%;  
            height: 400px; 
            object-fit: cover; 
        }
    </style>
    <title>Customer Products</title>
    <link rel="stylesheet" href="/path/to/your/css">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EcoGrocery App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">Cart</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/signup">Sign Up for EcoGrocery</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1>Products</h1>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="/images/<%= product.image %>" class="card-img-top product-image" alt="<%= product.productName %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.productName %></h5>
                            <p class="card-text">Price: <%= product.price %></p>
                            <p class="card-text">Quantity: <%= product.quantity %></p>
                            <form action="/cart/add/<%= product.productId %>" method="post">
                                <input type="hidden" name="quantity" value="1">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
